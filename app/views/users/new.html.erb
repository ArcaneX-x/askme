<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="generator" content="Hugo 0.84.0">
  <title>Sign-up | AskMe</title>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <style>
    .list-group {
      margin-bottom: 10px;
    }
    .list-group-item {
     padding: 0;
     margin-bottom: 1px;
    }

    .form-group {
      margin-bottom: 10px;
    }

  </style>

  <!-- Custom styles for this template -->
  <%= stylesheet_link_tag 'signin', media: 'all' %>
</head>
<body class="text-center">

<main class="form-signin">
    <%= image_tag 'ask.png', alt:"", width:"72", height:"72" %>
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
          <ul class="list-group">
            <% for message in @user.errors.full_messages %>
              <li class="list-group-item list-group-item-danger"><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: "Enter email" %>
      </div>

      <div class="form-group">
        <%= f.text_field :username, class: 'form-control', placeholder: "Username" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password confirmation" %>
      </div>

      <%= f.submit 'Submit', class: 'w-100 btn btn-lg btn-primary' %>
    <% end %>
    <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
</main>
</body>
</html>
