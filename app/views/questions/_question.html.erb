<div class="card">
  <div class="card-body">
    <div class="card-text">
      <small class="text-muted">
      <%= l(question.created_at, format: :short) %>
      </small>
    </div>
    <p class="card-text">
      <%= question.text %></p>
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>

    <% if question.answer.present? %>
      <div class="card-text">
        <%= question.answer %>
      </div>
    <% end %>
  </div>
</div>
